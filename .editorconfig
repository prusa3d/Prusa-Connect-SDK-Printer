# EditorConfig <https://EditorConfig.org>
root = true

# elementary defaults
# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_size = tab
indent_style = space
max_line_length = 80
tab_width = 4

# Markup and web files
[{*.html,*.xml,*.yaml,*.yml,*.json,*.toml,*.js,*.css}]
tab_width = 2
